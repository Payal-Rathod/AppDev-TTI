<Window x:Class="HomeBudgetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700"
        Closing="Window_Closing">

    <Grid Background="#C9E4E7">
        <TextBlock/>
        <TextBlock Grid.Row="1" Grid.Column="0" x:Name="FileNameTextBox" Height="30" Width="Auto" HorizontalAlignment="Left"/>
        <Menu Background="#C9E4E7" BorderThickness="0">
            <MenuItem Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Header="_File" Background="#FFFFFF">
            <MenuItem Header="_New"></MenuItem>
            <MenuItem Header="_Open" Click="openFile_Click"></MenuItem>
            <MenuItem Header="_Save"></MenuItem>
                <Separator />
                <MenuItem Header="_Exit" Click="MenuItem_Click"></MenuItem>
        </MenuItem>
        </Menu>
        <ComboBox BorderBrush="#0C6291" BorderThickness="2" SelectionChanged="CategoriesDropDown_SelectionChanged" Text="Select a category" x:Name="CategoriesDropDown" HorizontalAlignment="Stretch" Height="35" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" IsSynchronizedWithCurrentItem="True" IsEditable="True" Focusable="False">        </ComboBox>
        <DatePicker BorderBrush="#0C6291" BorderThickness="2" Grid.Row="1" Height="35"  x:Name="DateTimePicker1"  HorizontalAlignment="Stretch" Grid.Column="1" Grid.ColumnSpan="2"></DatePicker>
        <TextBox MouseDoubleClick="Amount_TextChanged" BorderBrush="#0C6291" BorderThickness="2" Height="Auto" Grid.Row="3" x:Name="Amount" PreviewTextInput="Amount_PreviewTextInput" HorizontalAlignment="Stretch" Grid.Column="1" Grid.ColumnSpan="2">Amount</TextBox>
        <TextBox MouseDoubleClick="Desc_MouseDoubleClick" BorderBrush="#0C6291" Margin="0, 10, 0, 0" BorderThickness="2" Grid.Row="4" Name="Desc" HorizontalAlignment="Stretch" Height="Auto" Grid.Column="1" Grid.ColumnSpan="2">Description</TextBox>
        <Button Background="#0C6291" Foreground="White" Grid.Column="1" Grid.Row="5" Width="100" Height="30" Click="AddExpenses_Click" >Add</Button>
        <Button Background="#0C6291" Foreground="White" Grid.Column="2" Grid.Row="5" Width="100" Height="30" >Cancel</Button>
        <Button Background="#0C6291" Foreground="White" Grid.Column="1" Grid.Row="6" Width="100" Height="30" Grid.ColumnSpan="2" Margin="0, 5, 0, 0" Click="Open_Category_Window">Add Category</Button>
        <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" ></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        
    </Grid>
</Window>
